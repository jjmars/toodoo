<div class="panel panel-default" id="task_<%= task.id %>">
  <div class="panel-heading clearfix">
    <h3 class="inline-block panel-title"><%= task.title %></h3>
    <div class="inline-block right-aligned">
      <% if task.status < 2 %>
        <%= link_to_update_status(task) %>
      <% end %>
      
      <%= link_to_delete_task(task) %>
    </div>
  </div>
  <% if !task.description.blank? %>
  <div class="panel-body">
    <%= task.description %>
  </div>
  <% end %>
</div>
