<div class="panel panel-default" id="task_<%= task.id %>">
  <div class="panel-heading clearfix">
    <h3 class="inline-block panel-title"><%= task.title %></h3>
    <div class="inline-block right-aligned">
      <%= link_to task, class: 'btn btn-xs btn-danger', method: :delete, remote: true, data: { confirm: 'Are you sure?', disable_with: '<i class="fa fa-refresh fa-spin"></i>' }, :'sr-only' => 'Delete' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </div>
  <% if !task.description.blank? %>
  <div class="panel-body">
    <%= task.description %>
  </div>
  <% end %>
</div>
