<% selected_status ||= 0 %>
<%= form_for(:task, url: tasks_path, remote: true, html: { class: 'form-inline pull-right', style: 'margin-top: 20px' } ) do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'sr-only' %>
    <%= f.text_field :title, class: 'form-control', placeholder: 'New task...' %>
  </div>
  <div class="form-group">
    <%= f.label :deadline, class: 'sr-only' %>
    <%= f.datetime_select :deadline, class: 'form-control' %>
  </div>
  <%= f.hidden_field :status, value: selected_status %>
  <div class="form-group">
    <%= f.submit 'Add', class: 'btn btn-primary', data: { disable_with: 'Adding...' } %>
  </div>
<% end %>
