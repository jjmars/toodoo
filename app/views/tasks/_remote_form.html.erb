<% selected_status ||= 0 %>
<%= form_for(:task, url: tasks_path, remote: true, method: 'post') do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.datetime_select :deadline %>
  </div>    
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <%= f.hidden_field :status, value: selected_status %><br>

  <div class="actions">
    <%= f.submit %>
  </div>
  
  <button id="new_task_hide">Cancel</button>
<% end %>
